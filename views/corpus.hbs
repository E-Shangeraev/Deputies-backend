<section class="corpus">
  <h2 class="title">
    Депутатский корпус
  </h2>
  <div class="corpus__container">
    {{#if deputies.length}}
      {{#each deputies}}
        <figure class="corpus__data" id="{{_id}}">
          <img class="corpus__photo" src="{{img}}" alt="{{name}}" />
          <figcaption class="corpus__caption">
            <h4 class="corpus__name">
              {{name}}
            </h4>
            <p class="corpus__post">
              {{post}}
            </p>
            <a href="#popup-{{_id}}" class="details open-corpus-popup">
              Подробнее
            </a>
          </figcaption>
        </figure>
        <div id="popup-{{_id}}" class="popup your-deputie mfp-hide">
          <div class="your-deputie__wrapper bg-gray bg-gray--border">
            <img class="your-deputie__photo" src="{{img}}" alt="{{name}}" />
            <header class="your-deputie__header d-flex">
              <div>
                <h3 class="your-deputie__name">
                  {{name}}
                </h3>
                <p class="your-deputie__post">
                  {{post}}
                </p>
              </div>
              <img src="{{fraction}}" />
            </header>
            <p class="your-deputie__desc">
              {{about}}
            </p>
            <footer class="your-deputie__footer">
              {{#if schedule}}
                <p>
                  <span class="red">
                    График приема:
                  </span>
                  {{schedule}}
                </p>
              {{/if}}
              {{#if appointment}}
                <p>
                  <span class="red">
                    Запись:
                  </span>
                  {{appointment}}
                </p>
              {{/if}}
            </footer>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
</section>
<section class="find">
  <div class="find__wrapper d-flex">
    <div>
      <h2 class="title">
        Найди своего депутата
      </h2>
      <p class="find__text">
        Введите адрес своего проживания и узнайте, какой депутат отвечает за ваш округ!
      </p>
    </div>
    <form class="form corpus__form" action="/corpus/search" method="POST">
      <input
        class="form__field"
        id="deputie-search"
        type="search"
        placeholder="Введите адрес своего проживания*"
        autocomplete="off"
      />
      <input type="hidden" class="form__id" />
      <button class="button form__button">
        Найти
      </button>
    </form>
  </div>
</section>
