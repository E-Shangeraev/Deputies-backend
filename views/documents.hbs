<section class="documents">
  <div class="d-flex">
    <h2 class="title">
      Документы
    </h2>
  </div>
  <ul class="documents__container">
    <li class="documents__item">
      <a href="/documents/sessions?y={{sessions.year}}&m={{sessions.month}}">
        <img
          class="documents__folder-icon"
          src="/img/folder-2.svg"
          alt="Решения сессии"
        />
        <h3 class="subtitle">
          Решения сессии
        </h3>
      </a>
      <a
        class="button documents__button"
        href="/documents/sessions?y={{sessions.year}}&m={{sessions.month}}"
      >
        <span>Открыть</span>
      </a>
    </li>
    <li class="documents__item">
      <a href="/documents/reports?y={{reports.year}}&m={{reports.month}}">
        <img
          class="documents__folder-icon"
          src="/img/folder-2.svg"
          alt="Отчёты о деятельности"
        />
        <h3 class="subtitle">
          Отчёты о деятельности
        </h3>
      </a>
      <a
        class="button documents__button"
        href="/documents/reports?y={{reports.year}}&m={{reports.month}}"
      >
        <span>Открыть</span>
      </a>
    </li>
    <li class="documents__item">
      <a href="/documents/base?y={{base.year}}&m={{base.month}}">
        <img
          class="documents__folder-icon"
          src="/img/folder-2.svg"
          alt="Нормативная правовая база"
        />
        <h3 class="subtitle">
          Нормативная правовая база
        </h3>
      </a>
      <a
        class="button documents__button"
        href="/documents/base?y={{base.year}}&m={{base.month}}"
      >
        <span>Открыть</span>
      </a>
    </li>
  </ul>
</section>