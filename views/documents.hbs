<section class="documents">
  <div class="d-flex">
    <h2 class="title">
      Документы
    </h2>
    <input type="search" class="search" placeholder="Поиск по документам" />
  </div>
  <div class="documents__container">
    <div class="documents__block">
      <h3 class="subtitle">
        Решения сессии
      </h3>
      {{#if sessions.length}}
        {{#each sessions}}
          <ul class="documents__list">
            <li class="documents__item">
              {{dir}}
              <ul>
                {{#each documents}}
                  <li>
                    <a href="./public/uploads/documents/sessions/{{dir}}/{{file}}" download>
                      {{name}}
                    </a>
                  </li>
                {{/each}}
              </ul>
            </li>
          </ul>
        {{/each}}
      {{/if}}
    </div>
    <div class="documents__block">
      <h3 class="subtitle">
        Отчёты о деятельности
      </h3>
      <ul class="documents__list">
        <li class="documents__item">
          Статистическая информация
          <ul>
            <li>
              <a href="/public/uploads/documents/sessions/2020/robots.txt" data-url="/public/uploads/documents/sessions/2020/robots.txt">
                Январь
              </a>
            </li>
            <li>
              <a href="#">
                Февраль
              </a>
            </li>
            <li>
              <a href="#">
                Март
              </a>
            </li>
          </ul>
        </li>
      </ul>
      <ul class="documents__list">
        <li class="documents__item">
          Сведения о доходах
          <ul>
            <li>
              <a href="#">
                Январь
              </a>
            </li>
            <li>
              <a href="#">
                Февраль
              </a>
            </li>
            <li>
              <a href="#">
                Март
              </a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="documents__block">
      <h3 class="subtitle">
        Нормативная правовая база
      </h3>
      {{#if base.length}}
        {{#each base}}
          <ul class="documents__list">
            <li class="documents__item">
              {{dir}}
              <ul>
                {{#each documents}}
                  <li>
                    <a href="./public/uploads/documents/base/{{dir}}/{{file}}" download>
                      {{name}}
                    </a>
                  </li>
                {{/each}}
              </ul>
            </li>
          </ul>
        {{/each}}
      {{/if}}
    </div>
    <a href="#" class="documents__download">
      <span>
        Скачать все фалы архивом
      </span>
      <img src="../svg/download.svg" />
    </a>
  </div>
</section>